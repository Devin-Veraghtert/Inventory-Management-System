@page "/inventories"

<h3>InventoryList</h3>
<br />
<br />

<EditForm Model="InventoryNameToSearch" FormName="formSearchInv">
    <div class="input-group">
        <InputText class="form-control" placeholder="Type inventory name here to search" @bind-Value="this.InventoryNameToSearch" />
        <button type="submit" class="btn-success input-group-text">Search</button>
    </div>
</EditForm>
<br />

<InventoryListComponent SearchInventoryFilter="@InventoryNameToSearch"/>
<br />
<a href="/addinventory" class="btn btn-primary">Add Inventory</a>

@code {
    [SupplyParameterFromForm]
    private string InventoryNameToSearch { get; set; } = string.Empty;

}
